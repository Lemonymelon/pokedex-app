{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "es6",
    "lib": [
      "dom",
      "es2019"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDirs": [
      "./src",
      "./test"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*.spec*"
  ]
}